@model RoleModel

@{
    ViewBag.Title = "Add Role";
}

<div class="container">
    <main role="main" class="pb-3">

        <h2 class="text-center">@ViewBag.Title</h2>
        <hr />

        <div class="row">
            <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                
                <form asp-controller="Role" asp-action="AddRoleToUser" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Id" />
                        <label asp-for="Roles"></label>
                        <select asp-for="@Model.Role" class="form-control form-control-lg">
                        @foreach (var role in Model.Roles)
                        {  
                                <option value="@role">@role</option>
                        }
                        </select>
                        <span asp-validation-for="Roles" class="small text-danger"></span>
                    </div>

                    <div class="text-center">
                        <input class="btn btn-primary mt-3" type="submit" value="Add" />
                    </div>
                </form>
            </div>
        </div>

    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
